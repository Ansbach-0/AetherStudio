# Voice Cloning SaaS - Configuração de Ambiente
# Copie este arquivo para .env e ajuste os valores

# Aplicação
APP_NAME=Voice Cloning SaaS API
APP_VERSION=0.1.0
DEBUG=false

# Banco de Dados
DATABASE_URL=sqlite+aiosqlite:///./voice_cloning.db

# GPU/ML
GPU_DEVICE=cuda:0
TORCH_THREADS=4

# Limites de Áudio
MAX_AUDIO_DURATION=300
MIN_AUDIO_DURATION=3
MAX_FILE_SIZE_MB=50

# Formatos e Idiomas
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,ogg,m4a
ALLOWED_LANGUAGES=pt-BR,en-US,es-ES

# Diretórios
UPLOAD_DIR=./uploads
MODELS_DIR=./models
OUTPUT_DIR=./outputs

# Sistema de Créditos
DEFAULT_CREDITS=100
CREDITS_PER_SECOND=0.5

# Rate Limiting
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_PERIOD=60

# CORS - URLs permitidas (separadas por vírgula)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Segurança (ALTERE EM PRODUÇÃO!)
SECRET_KEY=sua-chave-secreta-aqui-use-algo-forte

# Mercado Pago (deixe vazio para modo placeholder/manutenção)
# Obtenha suas credenciais em: https://www.mercadopago.com.br/developers/panel/app
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_WEBHOOK_SECRET=
